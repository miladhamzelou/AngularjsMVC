<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - NEC練習題</title>
    @Styles.Render(
        "~/Content/css",
        "~/Content/themes/jqueryui"
    )
    @Scripts.Render(
        "~/bundles/jquery",
        "~/bundles/jqueryui",
        "~/bundles/ng"
    )
</head>
<body>
    @if (ViewBag.IsHome==null)
    {
        @Html.ActionLink("回首頁", "Index", "Home")
    }
    
    @RenderBody()
    @RenderSection("scripts", required: false)
</body>
</html>
