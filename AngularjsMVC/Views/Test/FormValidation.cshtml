<style>
    .serverCustomForm tr {
        margin-top: 15px;
    }
</style>
<div ng-controller="formValidationCtrl">
    <div><h2><a href="#/">Back to Home</a></h2></div>
    <br />

    <h3>Angular Valid</h3>
    <div class="innerBox">
        <form novalidate name="buildInForm">
            <table class="table-form">
                <tr>
                    <th>maxlength</th>
                    <td>
                        <input type="text" name="maxlength" ng-model="buildIn.maxlength" maxlength="5" />{{ buildIn.maxlength }}
                        <div class="error" ng-show="buildInForm.maxlength.$invalid && buildInForm.maxlength.$dirty">invalid</div>
                        use maxlength ，Angular auto add attr ng-maxlength<br />
                    </td>
                </tr>
                <tr>
                    <th>ng-maxlength</th>
                    <td>
                        <input type="text" name="ng_maxlength" ng-model="buildIn.ng_maxlength" ng-maxlength="5" />{{ buildIn.ng_maxlength }}
                        <div class="error" ng-show="buildInForm.ng_maxlength.$invalid && buildInForm.ng_maxlength.$dirty">invalid</div>
                        <show-error for="ng_maxlength"></show-error>
                    </td>
                </tr>
                <tr>
                    <th>minlength</th>
                    <td>
                        <input type="text" name="minlength" ng-model="buildIn.minlength" minlength="5" />{{ buildIn.minlength }}
                        <div class="error" ng-show="buildInForm.minlength.$invalid && buildInForm.minlength.$dirty">invalid</div>
                        <show-error for="minlength"></show-error>
                        use minlength ，Angular auto add attr ng-minlength
                    </td>
                </tr>
                <tr>
                    <th>ng-minlength</th>
                    <td>
                        <input type="text" name="ng_inlength" ng-model="buildIn.ng_inlength" ng-minlength="5" />{{ buildIn.ng_inlength }}
                        <div class="error" ng-show="buildInForm.ng_inlength.$invalid && buildInForm.ng_inlength.$dirty">invalid</div>
                        <show-error for="ng_inlength"></show-error>
                    </td>
                </tr>
                <tr>
                    <th>ngPattern </th>
                    <td>
                        <input type="text" name="ngPattern" ng-model="buildIn.ngPattern" ng-pattern="startWithAlphabeta" />{{ buildIn.ngPattern }}
                        <div class="error" ng-show="buildInForm.ngPattern.$invalid && buildInForm.ngPattern.$dirty">invalid</div>
                    </td>
                </tr>
                <tr>
                    <th>required</th>
                    <td>
                        <input type="text" name="required" ng-model="buildIn.required" required />{{ buildIn.required }}
                        <div class="error" ng-show="buildInForm.required.$invalid && buildInForm.required.$dirty">invalid</div>
                        <show-error for="required"></show-error>
                    </td>
                </tr>
            </table>
        </form>

    </div>

    <h3>Customized Valid</h3>
    <div class="innerBox">
        <h4>Client Valid</h4>
        <form novalidate name="customForm">
            <table class="table-form">
                <tr>
                    <th>class="date"</th>
                    <td>date Valid</td>
                    <td><input type="text" class="date" name="date" ng-model="custom.date" min-date="'2016/01/02'" max-date="'2016/01/25'" />{{ custom.date }}
                        <div class="error" ng-show="customForm.date.$invalid && customForm.date.$dirty">invalid</div>
                        <show-error for="date"></show-error>
                    </td>
                </tr>
                <tr>
                    <th>class="date" date-format="<span class="text-danger" style="font-size:20px; font-weight:700;">'yy/mm</span><span class="text-danger" style="font-size:20px; font-weight:700;">'</span>"</th>
                    <td>date Valid(year month)</td>
                    <td>
                        <input type="text" class="date" date-format="'yy/mm'" name="dateM" ng-model="custom.dateM" min-date="'2016/01'" max-date="'2016/09'" />{{ custom.dateM }}
                        <div class="error" ng-show="customForm.dateM.$invalid && customForm.dateM.$dirty">invalid</div>
                        <show-error for="dateM"></show-error>
                    </td>
                </tr>
                <tr>
                    <th>class="time"</th>
                    <td>time Valid</td>
                    <td>
                        <input type="text" class="time" name="time" ng-model="custom.time" />{{ custom.time }}
                        <div class="error" ng-show="customForm.time.$invalid && customForm.time.$dirty">invalid</div>
                        <show-error for="time"></show-error>
                    </td>
                </tr>
                <tr>
                    <th>class="ipv4"</th>
                    <td>IP Valid</td>
                    <td>
                        <input type="text" class="ipv4" name="ipv4" ng-model="custom.ipv4" />{{ custom.ipv4 }}
                        <div class="error" ng-show="customForm.ipv4.$invalid && customForm.ipv4.$dirty">invalid</div>
                        <show-error for="ipv4"></show-error>
                    </td>
                </tr>
                <tr>
                    <th>class="alpha-numeric"</th>
                    <td>letter num Valid </td>
                    <td>
                        <input type="text" class="alpha-numeric" name="alphaNumeric" ng-model="custom.alphaNumeric" /><show-error for="alphaNumeric"></show-error>
                        <show-error for="alphaNumeric"></show-error>
                    </td>
                </tr>
                <tr>
                    <th>class="number"</th>
                    <td>num Valid</td>
                    <td>
                        <input type="text" class="number" name="number" ng-model="custom.number" />{{ custom.number }}
                        <div class="error" ng-show="customForm.number.$invalid && customForm.number.$dirty">invalid</div>
                        <show-error for="number"></show-error>
                    </td>
                </tr>
                <tr>
                    <th>class="digit"</th>
                    <td>digit Valid</td>
                    <td>
                        <input type="text" class="digit" name="digit" ng-model="custom.digit" />{{ custom.digit }}
                        <div class="error" ng-show="customForm.digit.$invalid && customForm.digit.$dirty">invalid</div>
                        <show-error for="digit"></show-error>
                    </td>
                </tr>
                <tr>
                    <th>class="integer"</th>
                    <td>integer Valid :positive negative </td>
                    <td>
                        <input type="text" class="integer" name="integer" ng-model="custom.integer" />{{ custom.integer }}
                        <div class="error" ng-show="customForm.integer.$invalid && customForm.integer.$dirty">invalid</div>
                        <show-error for="integer"></show-error>
                    </td>
                </tr>
                <tr>
                    <th>class="float" 或 float="2"</th>
                    <td>decimal Valid ， can set  decimal point</td>
                    <td>

                        <div class="error" ng-show="customForm.float.$invalid && customForm.float.$dirty">invalid</div><br />
                        <input type="text" float="2" name="float2" ng-model="custom.float2" />float="2" set 2 decimal point {{ custom.float2 }}
                        <show-error for="float2"></show-error>
                        <div class="error" ng-show="customForm.float2.$invalid && customForm.float2.$dirty">invalid</div>
                    </td>
                </tr>
                <tr>
                    <th>less-than="less value" value-text="scope value"</th>
                    <td>less than Valid</td>
                    <td>
                        <input type="text" name="StartValue" ng-model="custom.StartValue" less-than="custom.EndValue" />
                        <span> ~ </span>
                        <input type="text" name="EndValue" ng-model="custom.EndValue"/>
                        <show-error for="StartValue"></show-error><br />
                        <input type="text" class="date" name="StartValue2" ng-model="custom.StartValue2" less-than="custom.EndValue2" value-text="date" />
                        <span> ~ </span>
                        <input type="text" class="date" name="EndValue2" ng-model="custom.EndValue2" />
                        <show-error for="StartValue2"></show-error>
                    </td>
                </tr>
                <tr>
                    <th>fixlength="6"</th>
                    <td>fixlength Valid</td>
                    <td>
                        <input type="text" name="fixlength" ng-model="costom.FixLength" fixlength="6" />
                        <show-error for="fixlength"></show-error>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>