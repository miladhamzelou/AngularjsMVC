</div>

<h3>no data</h3>
<div class="innerBox" ng-controller="noitemCtrl">

    <button type="button" class="btn" ng-click="queryHasData()">query have data</button>
    <button type="button" class="btn btn-warning" ng-click="queryNoData()">query no data</button>

    <table class="table-list" ng-show="items && items.length>0">
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
        <tr ng-repeat="item in items">
            <td>{{ item.id }}</td>
            <td>{{ item.name }}</td>
        </tr>
    </table>
    <div noitem="items"></div>
</div>
<h3> file to ngModel</h3>
<div class="innerBox" ng-controller="fileUploadCtrl">
    <p>
        &lt;file-upload ng-model="yourObject" ng-change="yourEvent" params="fileOptions" /&gt;
        <br />
    </p>

    <input type="button" ng-click="addOne()" value="add a new file" />
    <div ng-repeat="fm in SimpleModelList">
        <div>
            arrayIndex: {{$index}}
            <p>Name : {{fm.Name}}</p>
            <p>Type : {{fm.MIMEType}}</p>
            <p>Size : {{fm.size}}</p>
            <file-upload ng-change="assignValue(fm)" ng-model="fm.fileList" params="fm.params" />
        </div>
        <br />
    </div>
    <br />
    Content:<pre>{{SimpleModelList | json}}</pre>
    <hr />
</div>