<div ng-controller="customDirectiveCtrl">
    <div><h2><a href="#/">Back to Home</a></h2></div>
    <br/>
    <h3>Customized Column</h3>
    <form name="myForm" novalidate ng-submit="doSubmit(newEntity)">
        <div class="innerBox">
            <button type="button" class="btn btn-warning" ng-click="togglefieldDisabled()" ng-bind="fieldDisabled ? 'Enable' : 'Disabled'"></button>
            <table class="table-list">
                <thead>
                    <tr>
                        <th style="width:15%;">column</th>
                        <th style="width:15%;">limit</th>
                        <th style="width:70%">how to use</th>
                    </tr>
                </thead>
                <tr>
                    <td>phone</td>
                    <td>class</td>
                    <td class="nowrap">
                        &lt;input type="text" class="<span class="text-danger">tel</span>" /&gt;<br />
                        <input type="text" name="TelOffice" class="tel" ng-model="newEntity.TelOffice" ng-disabled="fieldDisabled" />
                    </td>
                </tr>
                <tr>
                    <td>date</td>
                    <td>class</td>
                    <td class="nowrap">
                        &lt;input type="text" class="<span class="text-danger">date</span>" /&gt;<br /><br />
                        <input type="text" name="EndDate" class="date" ng-model="newEntity.EndDate" ng-disabled="fieldDisabled" />sample<br />
                        <input type="text" class="date" ng-model="newEntity.EndDate2" min-date="newEntity.EndDate" ng-disabled="fieldDisabled" />prev column set minDate<br />
                        <input type="text" class="date" ng-model="newEntity.EndDate3" min-date="'2016/01/05'" max-date="'2016/01/25'" ng-disabled="fieldDisabled" />fixDalue do minDate and maxDate<br />
                        <input type="text" class="date" ng-model="newEntity.EndDate4" show-max-date="true" ng-disabled="fieldDisabled" />showMaxDate<br />
                    </td>
                </tr>
                <tr>
                    <td>time</td>
                    <td>class</td>
                    <td class="nowrap">
                        &lt;input type="text" class="<span class="text-danger">time</span>" /&gt;<br />
                        <input type="text" name="StartTime" class="time" ng-model="newEntity.StartTime" ng-disabled="fieldDisabled" />
                    </td>
                </tr>
                <tr>
                    <td>IP</td>
                    <td>class</td>
                    <td class="nowrap">
                        &lt;input type="text" class="<span class="text-danger">ipv4</span>" /&gt;<br />
                        <input type="text" name="ClientIP" class="ipv4" ng-model="newEntity.ClientIP" ng-disabled="fieldDisabled" />
                    </td>
                </tr>
                <tr>
                    <td>letterOnly</td>
                    <td>class</td>
                    <td class="nowrap">
                        &lt;input type="text" <span class="text-danger">letter-only</span> /&gt;<br />
                        <input type="text" name="letterOnly" letter-only ng-model="newEntity.letterOnly" ng-disabled="fieldDisabled" />
                    </td>
                </tr>
                <tr>
                    <td>uppderCase</td>
                    <td>class</td>
                    <td class="nowrap">
                        &lt;input type="text" <span class="text-danger">uppercase</span> /&gt;<br />
                        <input type="text" name="Uppercase" letter-only uppercase ng-model="newEntity.Uppercase" ng-disabled="fieldDisabled" />
                    </td>
                </tr>
                <tr>
                    <td>lowerCase</td>
                    <td>class</td>
                    <td class="nowrap">
                        &lt;input type="text" <span class="text-danger">lowercase</span> /&gt;<br />
                        <input type="text" name="Lowercase" letter-only lowercase ng-model="newEntity.Lowercase" ng-disabled="fieldDisabled" />
                    </td>
                </tr>
                <tr>
                    <td>amount</td>
                    <td>class</td>
                    <td class="nowrap">
                        &lt;input type="text" class="<span class="text-danger">amount</span>" /&gt;<br />
                        <input type="text" name="Amount" class="amount" ng-model="newEntity.Amount" ng-disabled="fieldDisabled" />
                    </td>
                </tr>
                <tr>
                    <td>amount float</td>
                    <td>class</td>
                    <td class="nowrap">
                        &lt;input type="text" class="<span class="text-danger">amount</span>" <span class="text-danger">amount-float</span>="<span class="text-info">Decimal</span>" /&gt;<br />
                        <input type="text" name="Amount" class="amount" amount-float="2" ng-model="newEntity.AmountFloat" ng-disabled="fieldDisabled" />
                    </td>
                </tr>
                <tr>
                    <td>amount fix float</td>
                    <td>class</td>
                    <td class="nowrap">
                        &lt;input type="text" class="<span class="text-danger">amount</span>" <span class="text-danger">amount-float</span>="<span class="text-info">Decimal</span>" <span class="text-danger">amount-fix-float</span>="<span class="text-info">true</span>" /&gt;<br />
                        <input type="text" name="Amount" class="amount" amount-float="2" amount-fix-float="true" ng-model="newEntity.AmountFixFloat" ng-disabled="fieldDisabled" />
                    </td>
                </tr>
                <tr>
                    <td>amount noOperator</td>
                    <td>class</td>
                    <td class="nowrap">
                        &lt;input type="text" class="<span class="text-danger">amount</span>" <span class="text-danger">no-operator</span>="<span class="text-info">bool</span>" /&gt;<br />
                        <input type="text" name="Amount" class="amount" no-operator="true" ng-model="newEntity.noOperator" ng-disabled="fieldDisabled" />
                    </td>
                </tr>
                <tr>
                    <td class="nowrap">dialog-field</td>
                    <td>class</td>
                    <td>
                        &lt;input type="text" <span class="text-danger">dialog-field</span>="<span class="text-info">kind</span>" /&gt;<br /><br />
                        <input type="text" dialog-field="area" ng-model="newEntity.Area" name-value="newEntity.AreaName" ng-disabled="fieldDisabled" />
                    </td>
                </tr>
            </table>

            <br />
            <table class="table-list">
                <tr>
                    <td>autoComplete</td>
                    <td>class</td>
                    <td>
                        &lt;input type="text" <span class="text-danger">auto-complete</span>="<span class="text-info">options</span>" /&gt;<br />
                        input(0 or 1)<input type="text" auto-complete="autoCompleteOpt" ng-model="newEntity.testData" />
                    </td>
                </tr>

                <tr>
                    <td>textLength</td>
                    <td>tag</td>
                    <td class="nowrap">
                        &lt;input name="textLength" type="text" ng-model="test.textLength" /&gt; <br />
                        <span class="text-danger">&lt;text-length for="textLength" &lt;/text-length&gt;  </span>"
                        <br />
                        please input：<input name="textLength" type="text" ng-model="newEntity.textLength" />
                        <text-length for="textLength"></text-length>
                    </td>
                </tr>
                <tr>
                    <td>allow-pattern</td>
                    <td>Attribute</td>
                    <td>
                        &lt;input type="text" <span class="text-danger">allow-pattern</span>="<span class="text-info">regex(例：\d)</span>" /&gt;
                        <br />
                        <input type="text" name="allowPattern" ng-model="newEntity.allowPattern" allow-pattern="\d" />(only num0-9)
                    </td>
                </tr>
                <tfoot>
                    <tr>
                        <td colspan="6" class="text-center">
                            <button type="submit" class="btn" ng-disabled="myForm.$invalid">submit</button>
                            <button type="button" class="btn" ng-click="reset()">reset</button>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </form>
</div>

