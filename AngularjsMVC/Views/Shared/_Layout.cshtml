<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>AngularjsMVC</title>
    @Styles.Render(
        "~/Content/css",
        "~/Content/themes/jqueryui"
    )
    @Scripts.Render(
        "~/bundles/jquery",
        "~/bundles/jqueryui",
        "~/bundles/ng",
        "~/bundles/ng-Module",
        "~/bundles/ng-Service",
        "~/bundles/ng-Controller"
    )

</head>
<body>
    @if (ViewBag.IsHome == null)
    {
        @Html.ActionLink("Home", "Index", "Home")
    }

    @RenderBody()
    @RenderSection("scripts", required: false)
</body>
</html>
