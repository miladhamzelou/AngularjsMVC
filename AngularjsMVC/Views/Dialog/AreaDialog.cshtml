<div ng-controller="areaDialogCtrl">
    <div class="innerBox">
        <table>
            <tr>
                <td class="Subtopic">ID</td>
                <td><input type="text" ng-model="data.AreaID" /></td>
            </tr>
            <tr>
                <td class="Subtopic">NAME</td>
                <td><input type="text" ng-model="data.AreaNM" /></td>
            </tr>
            <tr>
                <td></td>
                <td><button type="button" class="btn" ng-click="queryData(data)"><span class="btn-icon btn-icon-search"></span>query</button></td>
            </tr>
        </table>
    </div>

    <div class="list-container">
        <table class="list-table">
            <thead class="set-thead">
                <tr>
                    <th style="width:100px">ID</th>
                    <th>NAME</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in items" ng-click="updateData(item)">
                    <td>{{ item.Id }}</td>
                    <td>{{ item.Name }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>